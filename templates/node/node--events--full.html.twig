<div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
    <div class="column-wrapper">
        {% if node.body.value %}
            <div class="column-large-10 column-medium-12 column-small-12 column-xsmall-12">
                <div class="block--wysiwyg">
                    {{ node.body.value | raw }}
                </div>
            </div>
        {% endif %}
        
        {% if content.field_gallery_image %}
            <div class="column-large-10 column-medium-12 column-small-12 column-xsmall-12">
                {{ content.field_gallery_image }}    
            </div>
        {% endif %}

        {% if content.field_past_events %}
            <div class="column-large-10 column-medium-12 column-small-12 column-xsmall-12">
                <div class="event-images">
                    {% for item in node.field_past_events %}
                        {% include '@molecules/02-blocks/24-image-and-caption-single.twig' with {
                            "image" : file_url(item.entity.field_thumbnail.entity.uri.value),
                            "caption" : item.entity.field_hero_image_caption.value
                        } %}
                    {% endfor%}
                </div>
            </div>
        {% endif %}
    </div>
 </div>